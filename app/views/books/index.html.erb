<h1 >Books</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Author</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td scope="row"><%= link_to book.name, book_path(book), class:'text-reset text-decoration-none' %></td>
      <td><%= book.author %></td>
      <td><%= link_to "edit_book_#{book.id}", edit_book_path(book),class:"btn-sm btn btn-primary" %>
      <%= link_to "delete_book_#{book.id}", book_path(book), data:{turbo_method: :delete, turbo_confirm: 'Are you sure?'},class:"btn-sm btn btn-danger"%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= link_to 'Add book', new_book_path, class:'btn btn-primary col-12'%>
</div>
